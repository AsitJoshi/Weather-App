<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" integrity="sha512-PgQMlq+nqFLV4ylk1gwUOgm6CtIIXkKwaIHp/PAIWHzig/lKZSEGKEysh0TCVbHJXCLN7WetD8TFecIky75ZfQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="css/style.css">
  </head>
  <body>
{{> navbar}}

    <!-------main header-------->
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12 col-12 mx-aut0">
          <div class="main-content">
            <form class="temp_form" action="/public/js">
                <div class="input-group">
                <input type="text" class="form-control" id="cityName" placeholder="Enter your city name" autocomplete="off">
                <input type="submit" value="search" class="input-group-text" id="submitBtn">
            </div>
            </form>
          </div>

          <div class="tempInfo">
            <div class="top_layer">
                <p id="day">Tuesday</p>
                <p id="date">14 feb</p>
            </div>
            <div class="main_layer">
                <p id="city_name">Get Your Output Here</p>
                <div class="data_hide middle_layer">
                    <p id="temp"><span id="temp_real_val">0</span> <sup>o</sup>C</p>
                    <p id="temp_status"><i class="fa fa-cloud"></i></p>
                </div>
            </div>
          </div>
          </div>
        </div>
      </div>


    <!-- Footer code -->

{{>footer}}


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
    <script src="js/main.js"></script>
    <script>

        const dayDiv = document.getElementById("day");
        const dateDiv = document.getElementById("date");
      const d = new Date();
      const setDay = ()=>{

      let weekday = new Array(7);
      weekday[0] = "Sunday";
      weekday[1] = "Monday";
      weekday[2] = "Tuesday";
      weekday[3] = "Wednesay";
      weekday[4] = "Thursday";
      weekday[5] = "Friday";
      weekday[6] = "Saturday";


      let day = weekday[d.getDay()];
      //console.log(day);

      dayDiv.innerHTML = `${day}`;

      };
      const setDate = ()=>{

      let months = new Array(12);
      months[0] = "Jan";
      months[1] = "Feb";
      months[2] = "Mar";
      months[3] = "Apr";
      months[4] = "May";
      months[5] = "June";
      months[6] = "Jul";
      months[7] = "Aug";
      months[8] = "Sept";
      months[9] = "Oct";
      months[10] = "Nov";
      months[11] = "Dec";


      let month = months[d.getMonth()];

      dateDiv.innerHTML = `${month} ${d.getDate()}`;

      };

      setDay();
      setDate();
    </script>
  </body>
</html>